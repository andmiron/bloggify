header.header
    nav.nav
        a.nav__el(href='/') Home
    nav.nav
        if user
            button.nav__el.nav__el--logout Log out
            a.nav__el(href='')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.photo}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/') Log In
            a.nav__el.nav__el--cta(href='/auth/signup') Sign Up